{{ `<?xml version="1.0" encoding="utf-8"?>` | safeHTML }}
    <!-- SEE https://help.apple.com/itc/podcasts_connect/#/itcb54353390 for specifications on apple podcast format -->
<rss version="2.0"
    xmlns:content="http://purl.org/rss/1.0/modules/content/"
    xmlns:wfw="http://wellformedweb.org/CommentAPI/" xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:atom="http://www.w3.org/2005/Atom" xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
    xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
    xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
    xmlns:media="http://search.yahoo.com/mrss/"> 
    <channel> {{ $assetFormat := .Scratch.Get "asset-format" }}
        <!-- required tags -->
        <title>{{ .Site.Params.podcast.tagline }}</title>
        <description>{{.Site.Params.podcast.description}}</description>
        <!-- Artwork must be a minimum size of 1400 x 1400 pixels and a maximum size of 3000 x 3000
            pixels, in JPEG or PNG format, 72 dpi, with appropriate file extensions (.jpg, .png),
            and in the RGB colorspace. These requirements are different from the standard RSS image
            tag specifications. -->
        <itunes:image
            href="https://res.cloudinary.com/resconda-it/image/upload/v1684593261/assets/img/logo/resconda_logo_1400_72dpi_b2robg.png" /> 
        <language>it</language>
        <itunes:category text="Science">
            <itunes:category text="Nature" />
        </itunes:category>
        <itunes:category text="Society &amp; Culture" />
        <atom:link
            href="{{.Site.BaseURL}}feed/{{$assetFormat}}/" rel="self" type="application/rss+xml" />
        <itunes:explicit>false</itunes:explicit>
        <!-- optional (recomended) tags -->
        <!-- looks like author is actually mandatory -->
        <itunes:author>{{.Site.Params.podcast.author}}</itunes:author>
        <link>{{.Site.BaseURL}}</link>
        <itunes:owner>
            <itunes:name>{{.Site.Params.podcast.owner.name}}</itunes:name>
            <itunes:email>{{.Site.Params.podcast.owner.email}}</itunes:email>
        </itunes:owner>
        {{ range (where .Site.RegularPages "Params.layout" "episode")}} 
            {{ .Scratch.Set "asset" .Params.mp3 }}
        <item>
            <!-- required tags -->
            <title>{{ .Params.number }}. {{ .Params.title }}</title>
            <enclosure
                url='{{.Site.Params.podcast.download_url}}{{ (.Scratch.Get "asset").asset_link | safeHTML }}'
                length='{{ (.Scratch.Get "asset").length }}'
                type="audio/{{$assetFormat}}" />
            <!-- optional (recomended) tags -->
            <guid>{{.Site.BaseURL}}{{if .Params.guid }}{{ .Params.guid }}{{ else }}{{ .Params.number }}{{ end }}/</guid>
            <pubDate>{{.PublishDate.Format "Mon, 02 Jan 2006 15:04:00 -0700" }}</pubDate>
            <!-- description is text containing one or more sentences describing your episode to potential listeners. 
            You can specify up to 4000 bytes. 
            You can use rich text formatting and some HTML (<p>, <ol>, <ul>, <li>, <a>) if wrapped in the <CDATA> tag. -->
            <description>{{.Params.short_description }}</description>
            <itunes:duration>{{ .Params.duration }}</itunes:duration>
            <link>{{.Permalink}}</link>
            <!-- Artwork must be a minimum size of 1400 x 1400 pixels and a maximum size of 3000 x 3000
            pixels, in JPEG or PNG format, 72 dpi, with appropriate file extensions (.jpg, .png),
            and in the RGB colorspace. These requirements are different from the standard RSS image
            tag specifications. -->
            {{ with .Params.image }}
            <itunes:image href="{{ partial "GetCloudinaryURL.html" (dict "name" .url) }}" />
            {{ end }}
            <itunes:explicit>false</itunes:explicit>            
        </item>
        {{end}} 
    </channel>
</rss>